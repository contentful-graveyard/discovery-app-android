<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/entry_preview_padding"
    android:paddingRight="@dimen/entry_preview_padding"
    android:paddingTop="@dimen/entry_preview_padding">

    <discovery.contentful.ui.CFTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/entry_preview_padding"/>

</LinearLayout>